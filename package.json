{
  "name": "exocorpse",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "devx": "bun dev && bun supabase start",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "next lint",
    "gemini": "bunx @google/gemini-cli@latest",
    "claude": "bunx @anthropic-ai/claude-code@latest",
    "sbr:link": "bun supabase link",
    "sbr:reset": "bun supabase db reset --linked",
    "sbr:diff": "bun supabase db diff -f new_migration --linked",
    "sbr:typegen": "bun supabase gen types typescript --linked --schema public > ./supabase/types.ts && prettier --write ./supabase/types.ts",
    "sbr:up": "bun supabase migration up --linked",
    "sbr:sync": "bun supabase db push --linked && bun supabase db pull --linked",
    "sbr:pull": "bun supabase db pull --linked",
    "sbr:push": "bun supabase db push --linked",
    "sb:status": "bun supabase status",
    "sb:start": "bun supabase start",
    "sb:stop": "bun supabase stop",
    "sb:reset": "bun supabase db reset",
    "sb:diff": "bun supabase db diff -f new_migration",
    "sb:new": "bun supabase migration new new_migration",
    "sb:up": "bun supabase migration up",
    "sb:typegen": "bun supabase gen types typescript --local --schema public > ./supabase/types.ts && prettier --write ./supabase/types.ts",
    "sb:sync": "bun supabase db push && bun supabase db pull",
    "sb:pull": "bun supabase db pull",
    "sb:push": "bun supabase db push",
    "sb:linkpush": "bun supabase link && bun supabase db push",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.5",
    "@tuturuuu/supabase": "npm:@jsr/tuturuuu__supabase@^0.1.1",
    "@vercel/analytics": "^1.5.0",
    "howler": "^2.2.4",
    "next": "^15.5.5",
    "nuqs": "^2.7.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.65.0",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-rnd": "^10.5.2",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/howler": "^2.2.12",
    "@types/node": "^24.8.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "supabase": "^2.51.0",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3"
  }
}
